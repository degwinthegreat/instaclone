<h1>ブログ詳細画面</h1>
<div class="container">
  <div class="card" >
    <div class="row">
      <div class="card-body">
        <div class="col-md-8">
          <p class="card-text"><p>本文: <%= @photo.content %></p>
        </div>
      </div>
    </div>
  <!--  <img class="card-img-bottom" src="..." alt="Card image cap"> -->
  <div class="row">
    <div class="col-md-8">
      <% unless @photo.photo.blank? %>
        <%= image_tag(@photo.photo, :class => "card-img-bottom img-responsive", :alt =>"Card image cap") %>
      <% else %>
        <%= image_tag('noimage.png',:class => "card-img-bottom img-responsive", :alt =>"Card image cap") %>
      <% end %>
    </div>
  </div>
  <% unless @photo.user == current_user %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(photo_id: @photo.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(photo_id: @photo.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>




<%= link_to '一覧に戻る', photos_path %>
