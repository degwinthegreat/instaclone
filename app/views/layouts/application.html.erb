<!DOCTYPE html>
<html>
  <head>
    <title>Instaclone</title>

    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track'=> true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track'=> true %>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
  </head>

  <body>
    <div class="main">
    <div class="cover"></div>
    <div class="header">
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <div class="title cleafix">
          <a class="navbar-brand" href="/photos"><span class="glyphicon glyphicon-camera"></span>InstaClone</a>

          </div>

          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">Insta_clone</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li>
              <a href="/photos/new">投稿する</a>
            </li>
            <li>
              <a href="/photos">投稿一覧</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
  <% notice %>
  <%if logged_in? %>
    <div class="login clearfix">
    <%= link_to(content_tag(:i, "ログアウト",class: "fas fa-sign-out-alt"), session_path(current_user.id), method: :delete) %>
    <%= link_to(content_tag(:i, "ユーザー", class: "far fa-address-card fa-lg"), user_path(current_user.id)) %>
    </div>
  <% else %>
    <div class="login cleafix">
    <%= link_to(content_tag(:i, "ログイン",class: "fas fa-sign-in-alt"), new_session_path) %>
    <%= link_to(content_tag(:i, "サインアップ",class: "fas fa-user-plus"), new_user_path) %>
  </div>
  <% end %>


    <%= yield %>
  </div>
    <footer class="footer">
      <div class="container">
        <p class="text-muted">InstaClone.</p>
      </div>
    </fotter>
  </body>
</html>
